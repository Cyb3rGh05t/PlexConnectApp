{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}{{
<document>
  <listTemplate>
    <banner>
      <title><![CDATA[{{VAL(MediaContainer/title)}}]]></title>
    </banner>
    <list>

      <section>
{{COPY(MediaContainer/Video)}}{{
        <!-- movies -->
{{IF({{CHK("{{VAL(type)}}"=="movie")}})}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelect="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH()}}')"
            onSelectHold="modal"
            >
          <title><![CDATA[{{VAL(title)}}]]></title>
          <relatedContent>
            <lockup>
              <img src="{{IMAGEURL(thumb::768)}}" />
              <title><![CDATA[{{VAL(title)}}]]></title>
              <description><![CDATA[{{VAL(summary)}}]]></description>
            </lockup>
          </relatedContent>
        </listItemLockup>
}}

        <!-- episodes -->
{{IF({{CHK("{{VAL(type)}}"=="episode")}})}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelect="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH()}}')"
            onSelectHold="modal"
            >
          <title><![CDATA[{{VAL(title)}}]]></title>  <!-- todo: season/epsiode -->
          <subtitle><![CDATA[{{VAL(grandparentTitle)}}]]></subtitle>
          <relatedContent>
            <lockup>
              <img src="{{IMAGEURL(thumb::768)}}" />
              <title><![CDATA[{{VAL(title)}}]]></title>
              <description><![CDATA[{{VAL(summary)}}]]></description>
            </lockup>
          </relatedContent>
        </listItemLockup>
}}
}}
      </section>
      
    </list>
  </listTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
