{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}{{
<document>
  <listTemplate>
    <banner>
      <title><![CDATA[{{VAL(MediaContainer/title1)}}]]></title>
    </banner>
    <list>
      
      <section>
{{COPY(MediaContainer/Directory)}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelectURL="{{URL(TVShow_ShowList:{{VAL(key)}})}}" onSelectPresenter="select"
            onPlayURL="{{URL(TVShow_ShowList:{{VAL(key)}})}}" onPlayPresenter="select"
            onSelectHoldURL="" onSelectHoldPresenter="modal"
            >
            <title><![CDATA[{{VAL(title)}}]]></title>
            <relatedContent>
              <lockup>
                <!-- preview? -->
              </lockup>
            </relatedContent>

        </listItemLockup>
}}
      </section>
      
    </list>
  </listTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
