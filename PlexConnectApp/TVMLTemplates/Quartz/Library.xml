{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
<document>
  <head>
    <style>
        .darkBackgroundColor {
        background-color: #262626;
        }
        .lightBackgroundColor {
        background-color: #efece6;
        }

      .showTextOnHighlight {
      tv-text-highlight-style: show-on-highlight;
      }
      .whiteButton {
      tv-tint-color: rgb(255, 255, 255);
      font-size: 24;
      margin: 80;
      tv-text-style: callout;
      
      }
      .rowLayout {
      height: 10;
      margin: 40;
      tv-align: right;
      }
      .roundedImageCorners {
      itml-img-treatment: corner-small;
      }
      .banner {
      height: 330;
      }
      
    </style>
  </head>
  <stackTemplate class="lightBackgroundColor">
      <identityBanner class="banner">
      
      <background>
          <img src="{{RESOURCEURL(TVMLTemplates/Quartz/images:topBanner:png)}}" width="1920" height="360" />
      </background>
      <!--<img src="resource://NZ-pg" width="90" height="180" />-->
    <title></title>
    <subtitle></subtitle>
    <row>
        <!--<buttonLockup onSelect="">
            <badge src="resource://button-follow" />
            <title>John Doe</title>
        </buttonLockup>-->
    </row>
    
    </identityBanner>
  <collectionList>
    {{PMSLOOP(owned)}}{{
    {{XML()}}{{
    <separator>
        <button onSelect="Presenter.load('Servers', '', '')">
            <text>Server: {{PMSVAL(name)}}  <badge src="resource://button-dropdown" width="31" height="14" /></text>
            
        </button>
    </separator>
    <shelf id="Library" autoHighlight="true">
      <header>
          <title>Library</title>
      </header>
      
      <section>
        {{COPY(MediaContainer/Directory)}}
        {{
        {{SET(noItems:false)}}
        {{IF({{CHK("{{VAL(type:)}}"=="movie")}})}}
        {{
        <lockup
          onSelect="Presenter.load('Movie_OnDeck', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
          onSelectHold="modal"
          >
          
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:bannerMovie:png)}}" height="318" width="547" />
          <title><![CDATA[{{VAL(title)}}]]></title>
        </lockup>
        }}
        {{IF({{CHK("{{VAL(type:)}}"=="show")}})}}
        {{
        <lockup
          onSelect="Presenter.load('TVShow_MenuBar', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
          onSelectHold="modal"
          >
          
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:bannerTV:png)}}" height="318" width="547" />
          <title><![CDATA[{{VAL(title)}}]]></title>
        </lockup>
        }}
        {{IF({{CHK("{{VAL(type:)}}"=="artist")}})}}
        {{
        <lockup
          onSelect="Presenter.load('Music_MenuBar', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
          onSelectHold="modal"
          >
          
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:bannerMusic:png)}}" height="318" width="547" />
          <title><![CDATA[{{VAL(title)}}]]></title>
        </lockup>
        }}
        {{IF({{CHK("{{VAL(type:)}}"=="photo")}})}}
        {{
        <lockup
          onSelect="Presenter.load('Photo_MenuBar', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
          onSelectHold="modal"
          >
          
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:bannerPhoto:png)}}" height="318" width="547" />
          <title><![CDATA[{{VAL(title)}}]]></title>
        </lockup>
        }}
        }}
        
      </section>
      }}
      }}

    </shelf>
   <shelf>
     <header>
       <title>More</title>
     </header>
     <section>
        <lockup onSelect="Presenter.load('Playlists_List', '', '{{PATH(/channels)}}')">
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:channels:png)}}" width="250" height="180" />
          <title>Channels</title>
        </lockup>
        <lockup onSelect="Presenter.load('Playlists_List', '', '{{PATH(/playlists)}}')">
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:playlists:png)}}" width="250" height="180" />
          <title>Playlists</title>
        </lockup>
        <lockup>
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:queue:png)}}" width="250" height="180" />
          <title>Queue</title>
        </lockup>
        <lockup onSelect="Presenter.load('SharedLibraries', '', '{{PATH(/library/sections)}}')">
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:shared:png)}}" width="250" height="180" />
          <title>Shared</title>
        </lockup>
        <lockup onSelect="Presenter.load('Search_All', '', '')">
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:search:png)}}" width="250" height="180" />
          <title>Search</title>
        </lockup>
        <lockup onSelect="Presenter.load('Settings', '', '')">
          <img class="roundedImageCorners" src="{{RESOURCEURL(TVMLTemplates/Quartz/images:settings:png)}}" width="250" height="180" />
          <title>Settings</title>
        </lockup>
        
      </section>
    </shelf>
   
  
  </collectionList>



</stackTemplate>
  
  
</document>
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
