<?xml version="1.0" encoding="UTF-8" ?>
{{CUT({{GET(noItems)}})}}
{{
{{SET(noItems:true)}}
{{XML()}}
{{
<document>
  <head>
    <style>
    .whiteButton {
      tv-tint-color: rgb(255, 255, 255);
      width: 500;
      height: 200;
    }
    .plot {
      min-height: 300;
      max-height: 400;
      margin: 50;
    }
    </style>
  </head>
  <compilationTemplate theme="dark">
    <list>
      <relatedContent>
        <itemBanner>
          <heroImg src="{{IMAGEURL(MediaContainer/thumb::768)}}" />
          <!--<row>
            <buttonLockup class="whiteButton">
              <badge src="" class="whiteButton" />
              <title/>
              <text><![CDATA[{{VAL(MediaContainer/summary)}}]]></text>
            </buttonLockup>
          </row>-->
        </itemBanner>
      </relatedContent>
      <header>
        <title><![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
        <subtitle><![CDATA[{{VAL(MediaContainer/parentYear)}}]]></subtitle>
        <row>
          <text><![CDATA[{{VAL(MediaContainer/Directory/leafCount)}}]]> episodes</text>
          <text><![CDATA[{{EVAL({{VAL(MediaContainer/Directory/leafCount)}} - {{VAL(MediaContainer/Directory/viewedLeafCount)}})}} unwatched]]></text>
        </row>
        
      </header>
      <section>
      	<description min-height="800" allowsZooming="true" moreLabel="MORE"
            onSelect="Presenter.loadContext('Movie_PrePlayDescription', '{{PMSID()}}', '{{PATH()}}')">
          <![CDATA[{{VAL(MediaContainer/summary)}}]]>
        </description>
      </section>
      <section>
        <header>
          <title>EPISODES</title>
        </header>
{{COPY(MediaContainer/Directory)}}
{{
{{SET(noItems:false)}}
	<listItemLockup autoHighlight="true" onSelect="Presenter.load('TVShow_EpisodeList', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onSelectHold="modal">
          <!--<ordinal minLength="3" class="ordinalLayout">1</ordinal>-->
          <!-- <img src="{{IMAGEURL(thumb::384)}}" width="100" height="150" /-->
          <title><![CDATA[{{VAL(title)}}]]></title>
          <subtitle>Unwatched <![CDATA[{{EVAL({{VAL(leafCount)}} - {{VAL(viewedLeafCount)}})}} / ]]><![CDATA[{{VAL(leafCount)}}]]></subtitle>
          <decorationLabel><![CDATA[{{EVAL({{VAL(leafCount)}} - {{VAL(viewedLeafCount)}})}}]]></decorationLabel>
          <!--<decorationImage src="{{IMAGEURL(thumb::384)}}" width="100" height="150"/>-->
        </listItemLockup>
        
}}        
      </section>
    </list>
  </compilationTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}
{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}